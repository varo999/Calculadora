<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/boton"
        android:padding="25dp">


        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/recuadro"
            android:padding="16dp"
            android:gravity="end"
            android:textSize="24sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton_borrar"
                android:layout_row="0"
                android:layout_column="2"
                android:text="C"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_UltRes"
                android:layout_row="0"
                android:layout_column="0"
                android:text="UL"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_TodRes"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Tr"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                />

            <!-- Botones existentes -->
            <Button
                android:id="@+id/boton_division"
                android:layout_column="3"
                android:text="/"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                />

            <Button
                android:id="@+id/boton_1"
                android:text="1"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_2"
                android:text="2"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_3"
                android:text="3"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_multiplicacion"
                android:text="*"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_4"
                android:text="4"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_5"
                android:text="5"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_6"
                android:text="6"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_resta"
                android:text="-"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_7"
                android:text="7"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_8"
                android:text="8"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_9"
                android:text="9"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_suma"
                android:layout_gravity="fill"
                android:layout_rowSpan="3"
                android:text="+"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

            <Button
                android:id="@+id/boton_0"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:text="0"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                />

            <Button
                android:id="@+id/boton_00"
                android:text="00"
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                />

            <Button
                android:id="@+id/boton_igual"
                android:layout_columnSpan="3"
                android:layout_gravity="fill"
                android:text="="
                android:backgroundTint="#00008B"
                android:layout_margin="4dp"
                 />

        </GridLayout>

    </LinearLayout>

</LinearLayout>
